{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["node"],

    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",

    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "@repo/db": ["../packages/db/src"],
      "@repo/schemas": ["../packages/schemas/src"]   // ðŸ‘ˆ add this
    }
  },
  "include": ["src", "api"],
  "exclude": ["node_modules"]
}